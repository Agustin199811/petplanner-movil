{
  "name": "backend-petplanner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "typeorm": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli",
    "migration:gen": "npm run typeorm migration:generate -- -d src/common/config/database.config.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/common/config/database.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/common/config/database.config.ts",
    "migration:show": "npm run typeorm migration:show -- -d src/common/config/database.config.ts",
    "build": "tsc",
    "typeorm:prod": "node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:run:prod": "npm run typeorm:prod migration:run -- -d dist/common/config/database.config.js",
    "migration:gen:prod": "npm run typeorm:prod migration:generate -- -d dist/common/config/database.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.15",
    "@types/passport-jwt": "^4.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
